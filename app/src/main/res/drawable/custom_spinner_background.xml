<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Spinner background color -->
            <corners android:radius="8dp"/> <!-- Optional: Rounded corners -->
            <stroke android:width="1dp" android:color="@color/black"/> <!-- Border -->
        </shape>
    </item>

    <!-- Dropdown Icon -->
    <item
        android:drawable="@drawable/down"
        android:gravity="end|center_vertical"
        android:right="10dp"/> <!-- âœ… Positions the icon to the right -->

</layer-list>
